<plugin>

   <extension point="org.eclipse.ui.editors">
		<editor id="org.wso2.carbonstudio.eclipse.ds.presentation.DsEditorID"
			name="%_UI_DsEditor_label" icon="icons/wso2/dbsIcon.gif"
			extensions="dbs" class="org.wso2.carbonstudio.eclipse.ds.presentation.DsEditor"
			contributorClass="org.wso2.carbonstudio.eclipse.ds.presentation.DsActionBarContributor">
			<contentTypeBinding
				contentTypeId="org.wso2.carbonstudio.eclipse.ds.contenttype.dsconfxml">
			</contentTypeBinding>
		</editor>
	</extension>

	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type base-type="org.eclipse.core.runtime.xml"
			file-extensions="dbs"
			id="org.wso2.carbonstudio.eclipse.ds.contenttype.dsconfxml"
			name="DS Editor File" priority="high"
		    describer=" org.eclipse.core.runtime.content.XMLRootElementContentDescriber:data">
		</content-type>
	</extension>

</plugin>
