<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.wso2.carbonstudio.eclipse.capp.project/org.wso2.carbonstudio.eclipse.capp.artifacts"
            class="org.wso2.carbonstudio.eclipse.capp.artifact.carbon.ui.bundle.ui.wizard.NewCarbonUIBundleArtifactWizard"
            icon="icons/carbon-ui-bundle-16x16.png"
            id="org.wso2.carbonstudio.eclipse.capp.artifact.carbon.ui.bundle.ui.wizard.NewCarbonUIBundleArtifactWizard"
            name="Carbon UI Bundle">
      </wizard>
   </extension>
   
  <extension point="org.eclipse.ui.navigator.viewer">
	<viewerContentBinding viewerId="org.eclipse.ui.navigator.ProjectExplorer">
	   	<includes>
			<contentExtension
				pattern="org.wso2.carbonstudio.eclipse.capp.artifact.carbon.ui.bundle.navigator.content" />
	    </includes>
	 </viewerContentBinding>
   </extension>
   
   <extension point="org.wso2.carbonstudio.eclipse.capp.project.artifacts">
		<artifact
			class="org.wso2.carbonstudio.eclipse.capp.artifact.carbon.ui.bundle.core.CarbonUIBundleArtifactHandler"
			id="org.wso2.capp.artifact.carbon.ui.bundle">
		</artifact>
	</extension>
   
   
   
   
   <extension point="org.eclipse.ui.navigator.navigatorContent">
		<navigatorContent activeByDefault="true"
			icon="icons/carbon-ui-bundle-16x16.png"
			id="org.wso2.carbonstudio.eclipse.capp.artifact.carbon.ui.bundle.navigator.content"
			contentProvider="org.wso2.carbonstudio.eclipse.capp.core.provider.EmptyNavigatorContentProvider"
			labelProvider="org.wso2.carbonstudio.eclipse.capp.core.provider.EmptyNavigatorLabelProvider"
			name="Carbon UI Bundle" priority="high">
		    <triggerPoints>
			  	<or>
					<instanceof
						value="org.eclipse.core.resources.IProject" />
				</or>
			</triggerPoints>			
			<commonWizard type="new" menuGroupId="5org.wso2.carbonstudio.eclipse.capp.newartifacts.ui"
				wizardId="org.wso2.carbonstudio.eclipse.capp.artifact.carbon.ui.bundle.ui.wizard.NewCarbonUIBundleArtifactWizard">
				<enablement>
					<or>
						<adapt type="org.eclipse.core.resources.IProject">
							<test property="org.eclipse.core.resources.projectNature"
								value="org.wso2.carbonstudio.eclipse.capp.project.nature" />
						</adapt>
					</or>
				</enablement>
			</commonWizard>
		</navigatorContent>
	</extension>
   
</plugin>
