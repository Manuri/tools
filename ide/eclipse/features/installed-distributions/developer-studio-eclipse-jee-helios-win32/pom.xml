<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.wso2.eclipse</groupId>
        <artifactId>wso2-developer-studio-eclipse-distributions-parent</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>
    <groupId>org.wso2.developerstudio</groupId>
    <artifactId>developer-studio-eclipse-jee-helios-win32</artifactId>
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <name>WSO2 Developer Studio Eclipse distribution - ${artifactId}</name>
    <url>http://wso2.org</url>
    <repositories>
    	<repository>
    		<id>wso2-maven2-repo</id>
    		<name>WSO2 Maven2 Repo</name>
    		<url>http://dist.wso2.org/maven2/</url>
    	</repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>wso2-maven2-repository</id>
            <url>http://dist.wso2.org/maven2</url>
        </pluginRepository>
        <pluginRepository>
            <id>wso2-maven2-snapshot-repository</id>
            <url>http://dist.wso2.org/snapshots/maven2</url>
        </pluginRepository>
    </pluginRepositories>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.0-alpha-4</version>
                <inherited>false</inherited>
                <executions>
                    <execution>
                        <id>1-unpack-p2-agent-distribution</id>
                        <phase>test</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.wso2.carbon</groupId>
                                    <artifactId>wso2-p2-agent</artifactId>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/p2-agent</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse</groupId>
                                    <artifactId>eclipse-jee-helios-win32</artifactId>
                                    <version>3.6.0</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.wso2.eclipse</groupId>
                                    <artifactId>wso2-carbon-studio</artifactId>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/p2-repo</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>1.3.1</version>
                <executions>
                      <execution>
                        <id>3-p2-profile-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-profile-gen</goal>
                        </goals>
                        <configuration>
                            <profile>epp.package.jee</profile>
                            <p2AgentLocation>${basedir}/target/p2-agent</p2AgentLocation>
                            <metadataRepository>file:${basedir}/target/p2-repo</metadataRepository>
                            <artifactRepository>file:${basedir}/target/p2-repo</artifactRepository>
                            <destination>${basedir}/target/eclipse</destination>
                            <deleteOldProfileFiles>false</deleteOldProfileFiles>
                            <features>
                                <feature>
                                    <id>org.wso2.developerstudio.eclipse.wsas.core.feature.feature.group</id>
                                    <version>${wsas.tools.feature.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.developerstudio.eclipse.bps.feature.feature.group</id>
                                    <version>${bps.tools.feature.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.developerstudio.eclipse.greg.feature.feature.group</id>
                                    <version>${greg.tools.feature.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.developerstudio.eclipse.esb.feature.feature.group</id>
                                    <version>${esb.tools.feature.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.developerstudio.eclipse.carbon.uibundle.feature.feature.group</id>
                                    <version>${carbon.tools.feature.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.developerstudio.eclipse.ds.feature.feature.group</id>
                                    <version>${ds.tools.feature.version}</version>
                                </feature>   
                                        
                                <feature>
                                    <id>org.wso2.developerstudio.eclipse.capp.feature.feature.group</id>
                                    <version>${capp.tools.feature.version}</version>
                                </feature>
                                <feature>
                                    <id>com.googlecode.osde.feature.feature.group</id>
                                    <version>${osde.feature.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.developerstudio.eclipse.carbonserver.30.feature.feature.group</id>
                                    <version>${carbonserver.30.feature.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.developerstudio.eclipse.carbonserver.31.feature.feature.group</id>
                                    <version>${carbonserver.31.feature.version}</version>
                                </feature>
					            <feature>
                                    <id>org.wso2.developerstudio.eclipse.carbonserver.32.feature.feature.group</id>
                                    <version>${carbonserver.32.feature.version}</version>
                                </feature>
                                <feature>
                                    <id>org.jboss.tools.smooks.feature.feature.group</id>
                                    <version>${smooks.feature.version}</version>
                                </feature>                            
                            </features>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-2</version>
                <executions>
                    <execution>
                        <id>1-pre_dist</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attached</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>${basedir}/src/assembly/dist.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
