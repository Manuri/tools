<?xml version="1.0" encoding="UTF-8"?>
<wizard>
	<projectOptions title="Registry Resource Artifact Creation Options"
					description="Select how you would like to create your new registry resource"
					error="Please select a method to create the registry resource">
		<option id="new.resource" default="true">From existing Template</option>
		<option id="import.resource">Import from file system</option>
		<option id="import.dump">Import Registry Dump File from File System</option>
	</projectOptions>
	<projectOptionSettings>
		<settings optionId="new.resource"
				  title="Create A New Registry Resource"
				  description="Give a name for the registry resource"
				  error="Please give a name for the registry resource">
			<data modelProperty="resource.name" type="string" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController">Resource Name</data>
			<data modelProperty="resource.type" type="list" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController"  controlData="select=single;modify=non-editable;class=org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactTemplateList">Template</data>
			<data modelProperty="reg.location" type="string" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController">Registry path to deploy</data>
			<data modelProperty="save.file" type="workspacefolder" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController" controlData="filterClass=org.wso2.carbonstudio.eclipse.artifact.registry.validators.ProjectFilter">Save resource in</data>
			<data modelProperty="create.prj" type="link" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController" controlData="align=right">&lt;a&gt;Create new Project...&lt;/a&gt;</data>

			<projectNatures>
				<nature>org.eclipse.jdt.core.javanature</nature>
			</projectNatures>
		</settings>
		<settings optionId="import.resource"
				  title="Import Registry Resource"
				  description="Browse the location of a resource file"
				  error="Browse and select a resource file">
	
			<data modelProperty="import.file" type="file+dir" filter="*.*" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController">From File</data>
			<data modelProperty="copy.content" type="choice" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController">Copy content only</data>

			<data modelProperty="reg.location" type="string" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController">Registry path to deploy</data>
			<data modelProperty="save.file" type="workspacefolder" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController" controlData="filterClass=org.wso2.carbonstudio.eclipse.artifact.registry.validators.ProjectFilter">Save resource in:</data>
			<data modelProperty="create.prj" type="link" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController" controlData="align=right">&lt;a&gt;Create new Project...&lt;/a&gt;</data>
			
			<projectNatures>
				<nature>org.eclipse.jdt.core.javanature</nature>
			</projectNatures>
		</settings>
		
		<settings optionId="import.dump"
				  title="Import Registry Dump File"
				  description="Browse the location of a registry dump file"
				  error="Browse and select a Proxy Service configuration file">
			<data modelProperty="import.file" type="file" filter="*.xml" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController">Registry Dump File</data>

			<data modelProperty="reg.location" type="string" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController">Registry path to deploy</data>
			<data modelProperty="save.file" type="workspacefolder" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController" controlData="filterClass=org.wso2.carbonstudio.eclipse.artifact.registry.validators.ProjectFilter">Save resource in:</data>
			<data modelProperty="create.esb.prj" type="link" fieldController="org.wso2.carbonstudio.eclipse.artifact.registry.validators.RegistryArtifactFieldController" controlData="align=right">&lt;a&gt;Create new Project...&lt;/a&gt;</data>
			
			<projectNatures>
				<nature>org.eclipse.jdt.core.javanature</nature>
			</projectNatures>
		</settings>
	</projectOptionSettings>
	
</wizard>