<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="WSO2 AppFactory"
            id="org.wso2.developerstudio.appfactory.ui">
      </category>
      <view
            name="WSO2 AppFactory"
            icon="icons/appfac.png"
            category="org.wso2.developerstudio.appfactory.ui"
            class="org.wso2.developerstudio.appfactory.ui.views.AppfactoryView"
            id="org.wso2.developerstudio.appfactory.ui.views.AppfactoryView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.wso2.developerstudio.appfactory.ui.views.AppfactoryView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
    <extension point="org.eclipse.ui.popupMenus">
        <objectContribution
              objectClass="org.eclipse.core.resources.IProject"
               id="org.wso2.developerstudio.eclipse.appfactory.project.popup.deploy">
               <action
                    label="Deploy"
                    icon="icons/deploy.png"
                    class="org.wso2.developerstudio.appfactory.ui.actions.DeployAction"
                    id="org.wso2.developerstudio.eclipse.appfactory.project.ui.action.deploy">
               </action>
               <enablement>
					<adapt type="org.eclipse.core.resources.IProject">
						<or>
							<test property="org.eclipse.core.resources.projectNature"
								value="org.wso2.appfactory.webapp.project.nature" />
		 				</or>
					</adapt>
				</enablement>
              </objectContribution>
        </extension>
        <extension point="org.eclipse.ui.popupMenus">
        <objectContribution
              objectClass="org.eclipse.core.resources.IProject"
               id="org.wso2.developerstudio.eclipse.appfactory.project.popup.promote">
               <action
                    label="Promote to QA"
                    icon="icons/appfac.png"
                    class="org.wso2.developerstudio.appfactory.ui.actions.PromoteAction"
                    id="org.wso2.developerstudio.eclipse.appfactory.project.ui.action.promote">
               </action>
               <enablement>
					<adapt type="org.eclipse.core.resources.IProject">
						<or>
							<test property="org.eclipse.core.resources.projectNature"
								value="org.wso2.appfactory.webapp.project.nature" />
		 				</or>
					</adapt>
				</enablement>
              </objectContribution>
        </extension>
</plugin>
