    <includeBaseDirectory>false</includeBaseDirectory> 
    <baseDirectory>site</baseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>wso2-developer-studio-${pom.version}-docs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/site</directory>
            <outputDirectory>wso2-developer-studio-${pom.version}-docs</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>

