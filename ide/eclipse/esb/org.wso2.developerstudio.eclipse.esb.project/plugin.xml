<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.core.resources.natures"
		id="org.wso2.carbonstudio.eclipse.esb.project.nature" name="ESB Project Nature">
		<runtime>
			<run
				class="org.wso2.carbonstudio.eclipse.esb.project.nature.ESBProjectNature">
			</run>
		</runtime>
	</extension>
	<extension point="org.eclipse.ui.ide.projectNatureImages">
		<image id="org.wso2.carbonstudio.eclipse.esb.project.natureImage"
			natureId="org.wso2.carbonstudio.eclipse.esb.project.nature" icon="icons/esb-project-12.png">
		</image>
	</extension>
	
	<extension
         point="org.eclipse.ui.newWizards">
         <wizard name="ESB Config Project"
			category="org.wso2.carbonstudio.eclipse.capp.project/org.wso2.carbonstudio.eclipse.message.mediation/org.wso2.carbonstudio.eclipse.message.mediation.project.types"
			class="org.wso2.carbonstudio.eclipse.esb.project.ui.wizard.ESBProjectWizard"
			id="org.wso2.carbonstudio.eclipse.artifact.newesbproject"
			wizardManifest="project_wizard.xml"
			icon="icons/esb-project-12.png"
			project="true">
			<description>ESB Config Project</description>
		</wizard>
   </extension>
 <extension
       point="org.eclipse.ltk.core.refactoring.renameParticipants">
       <renameParticipant
			class="org.wso2.carbonstudio.eclipse.esb.project.refactoring.rename.ESBArtifactRenameParticipant"
			id="ESBArtifactRenameParticipant"
			name="ESBArtifactRename">
				<enablement>
					<and>
							<instanceof
								value="org.eclipse.core.resources.IFile">
							</instanceof>
						<adapt type="org.eclipse.core.resources.IResource">
             				<test
                   				property="org.eclipse.core.resources.projectNature"
                   				value="org.wso2.carbonstudio.eclipse.esb.project.nature">
             				</test>
         				</adapt>
					</and>
				</enablement>
		</renameParticipant>
 </extension>
</plugin>
